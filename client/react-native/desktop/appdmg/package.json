{
  "name": "Berty",
  "author": "Berty Technologies",
  "version": "0.0.1",
  "description": "Easy and secure communication, anywhere",
  "build": {
    "appId": "chat.berty.macos",
    "mac": {
      "target": "dmg",
      "category": "public.app-category.social-networking",
      "icon": "./icon.icns",
      "type": "distribution",
      "binaries": [
        "./Berty.app/Contents/libs/libcrypto.1.0.0.dylib"
      ]
    },
    "dmg": {
      "background": "./background.tiff",
      "icon": "./icon.icns",
      "iconSize": 80,
      "contents": [
        {
          "x": 130,
          "y": 260,
          "type": "file",
          "name": "Berty.app"
        },
        {
          "x": 410,
          "y": 260,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^5.0.0"
  }
}
