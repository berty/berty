{
  "description": "Berty desktop app",
  "author": "Berty Technologies",
  "name": "berty-electron-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "electron-devtools-installer": "^3.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-native": "^0.67.1",
    "react-native-web": "^0.17.5"
  },
  "scripts": {
    "start": "concurrently \"npm:start:renderer\" \"npm:build:main\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electronmon .\"",
    "build": "SKIP_PREFLIGHT_CHECK=true craco build",
    "test": "SKIP_PREFLIGHT_CHECK=true craco test",
    "eject": "react-scripts eject",
    "start:renderer": "cross-env BROWSER=none SKIP_PREFLIGHT_CHECK=true craco start",
    "build:main": "npx tsc --project tsconfig.main.json --watch",
    "dist:win": "SKIP_PREFLIGHT_CHECK=true craco build && npx tsc --project tsconfig.main.json && electron-builder -w -c.extraMetadata.main=build/main.js",
    "dist:mac": "SKIP_PREFLIGHT_CHECK=true craco build && npx tsc --project tsconfig.main.json && electron-builder -m -c.extraMetadata.main=build/main.js  -c.artifactName=Berty.dmg",
    "dist:linux": "SKIP_PREFLIGHT_CHECK=true craco build && npx tsc --project tsconfig.main.json && electron-builder -l -c.extraMetadata.main=build/main.js",
    "fix:electron": "npx electron-fix start"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "homepage": ".",
  "main": "./build/main.js",
  "engines": {
    "node": ">=14"
  },
  "build": {
    "extends": null,
    "appId": "tech.berty.mac",
    "productName": "Berty",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!**/*.{jar,aar,map}",
      "!**/node_modules/@babel/**",
      "!**/node_modules/@react-native-community/eslint-config/**",
      "!**/node_modules/@types/**",
      "!**/node_modules/@typescript-eslint/**",
      "!**/node_modules/babel-jest/**",
      "!**/node_modules/eslint/**",
      "!**/node_modules/node-notifier/**",
      "!**/node_modules/eslint-plugin-jsx-a11y/**",
      "!**/node_modules/language-subtag-registry/**",
      "!**/node_modules/language-tags/**",
      "!**/node_modules/metro-*/**",
      "!**/node_modules/babel-runtime/**",
      "!**/node_modules/@babel/helper-*/**",
      "!**/node_modules/*caniuse*/**",
      "!**/node_modules/*-webpack-plugin/**",
      "!**/node_modules/*-webpack-plugin/**",
      "!**/node_modules/jest-*/**",
      "!**/node_modules/jest/**",
      "!**/node_modules/react-dev-utils/**",
      "!**/node_modules/react-native-svg-transformer/**",
      "!**/node_modules/react-test-renderer/**",
      "!**/node_modules/typescript/**",
      "!**/node_modules/concurrently/**",
      "!**/node_modules/cross-env/**",
      "!**/node_modules/electron/**",
      "!**/node_modules/electron-builder/**",
      "!**/node_modules/electron-fix/**",
      "!**/node_modules/electronmon/**",
      "!**/node_modules/hermes-engine/**",
      "!**/node_modules/hermes-parser/**",
      "!**/node_modules/flow-parser/**",
      "!**/node_modules/react-native/android/**",
      "!**/node_modules/react-native/ReactAndroid/**",
      "!**/node_modules/react-native/ReactCommon/**",
      "!**/node_modules/react-native/React/**"
    ],
    "extraFiles": [
      {
        "from": "resources/${os}",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "target": "dmg",
      "category": "social-networking"
    },
    "win": {
      "target": "nsis",
      "icon": "./public/logo512.png"
    },
    "linux": {
      "target": "deb",
      "category": "Development"
    }
  },
  "devDependencies": {
    "@craco/craco": "^6.4.3",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "@types/jest": "^26.0.24",
    "@types/node": "^12.20.42",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "concurrently": "^6.5.1",
    "cross-env": "^7.0.3",
    "electron": "^13.6.7",
    "electron-builder": "^23.0.3",
    "electron-fix": "^1.1.3",
    "electronmon": "^2.0.2",
    "wait-on": "^6.0.0",
    "ts-loader": "^8.2.0",
    "typescript": "^4.5.5",
    "react-scripts": "^4.0.3"
  }
}
