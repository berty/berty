{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "berty-bridge-expo": ["../src/index"],
      "berty-bridge-expo/*": ["../src/*"],
      "@berty/*": ["./src/*"],
      "@/*": ["./*"]
